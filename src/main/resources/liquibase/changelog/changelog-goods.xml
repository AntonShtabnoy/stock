<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="12.11.2017_22:11" author="yauhenmalchanau@gmail.com">
        <createTable tableName="goods">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="storage_method" type="varchar(10)"/>
            <column name="storage_duration" type="int"/>
            <column name="cost" type="int"/>
            <column name="weight" type="double"/>
            <column name="status" type="varchar(20)"/>
            <column name="placement_datetime" type="datetime"/>
            <column name="count" type="int"/>
            <column name="updated_by" type="bigint">
                <constraints foreignKeyName="goods_updated_by_user_id_fk" referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>
            <column name="update_time" type="timestamp"/>
        </createTable>
        <rollback>
            <dropTable tableName="goods"/>
        </rollback>
    </changeSet>
</databaseChangeLog>