<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="12.11.2017_21:25" author="www.pavlovsky@gmail.com">
        <createTable tableName="sender_recipient">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="update_time" type="timestamp"/>
            <column name="updated_by" type="bigint">
                <constraints foreignKeyName="sender_recipient_updated_by_user_id_fk" referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="sender_recipient" />
        </rollback>
    </changeSet>
</databaseChangeLog>