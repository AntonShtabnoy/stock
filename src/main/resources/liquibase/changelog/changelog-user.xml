<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="12.11.2017_20:09" author="bogdanshishkin1998@gmail.com">
    <changeSet id="createTable_user" author="bogdanshishkin1998@gmail.com">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(40)"/>
            <column name="first_name" type="varchar(40)"/>
            <column name="middle_name" type="varchar(40)"/>
            <column name="last_name" type="varchar(40)"/>
            <column name="dob" type="date"/> <!-- Date Of Birth -->
            <column name="login" type="varchar(40)"/>
            <column name="password" type="varchar(60)"/>
            <column name="client_id" type="bigint">
                <constraints
                        referencedTableName="client"
                        referencedColumnNames="id"
                        foreignKeyName="client_id_fk"
                        />
            </column>
            <column name="country" type="varchar(40)"/>
            <column name="city" type="varchar(40)"/>
            <column name="street" type="varchar(60)"/>
            <column name="house_number" type="varchar(10)"/>
            <column name="flat_number" type="varchar(10)"/>
            <column name="is_deleted" type="bit"/> <!-- 1 - deleted, 0 - not deleted -->
        </createTable>
    </changeSet>
</databaseChangeLog>
